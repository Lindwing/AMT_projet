<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">
   <display-name>Shop eLS | AMT Project</display-name>

   <servlet>
       <servlet-name>Accueil</servlet-name>
       <servlet-class>ch.heigvd.amt.projet.shop_els.controller.Index</servlet-class>
       <load-on-startup>1</load-on-startup>
   </servlet>

       <servlet-mapping>
           <servlet-name>Accueil</servlet-name>
           <url-pattern>/index</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Account</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.Account</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Account</servlet-name>
           <url-pattern>/account</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Cart</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.Cart</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Cart</servlet-name>
           <url-pattern>/cart</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Checkout</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.Checkout</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Checkout</servlet-name>
           <url-pattern>/checkout</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Contact</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.Contact</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Contact</servlet-name>
           <url-pattern>/contact</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Product</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.Product</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Product</servlet-name>
           <url-pattern>/product</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>ProductDetail</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.ProductDetail</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>ProductDetail</servlet-name>
           <url-pattern>/productDetail</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Wishlist</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.Wishlist</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Wishlist</servlet-name>
           <url-pattern>/wishlist</url-pattern>
       </servlet-mapping>

       <servlet-mapping>
           <servlet-name>Administrator</servlet-name>
           <url-pattern>/admin</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Administrator</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.AdministratorController</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Categories</servlet-name>
           <url-pattern>/admin/categories</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Categories</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.CategoryController</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>Articles</servlet-name>
           <url-pattern>/admin/articles</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>Articles</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.ArticleController</servlet-class>
       </servlet>

       <servlet-mapping>
           <servlet-name>ArticleAdd</servlet-name>
           <url-pattern>/admin/articleAdd</url-pattern>
       </servlet-mapping>

       <servlet>
           <servlet-name>ArticleAdd</servlet-name>
           <servlet-class>ch.heigvd.amt.projet.shop_els.controller.ArticleAddController</servlet-class>
       </servlet>

        <servlet-mapping>
            <servlet-name>CategoryAdd</servlet-name>
            <url-pattern>/admin/categoryAdd</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>CategoryAdd</servlet-name>
            <servlet-class>ch.heigvd.amt.projet.shop_els.controller.CategoryAddController</servlet-class>
        </servlet>
</web-app>
